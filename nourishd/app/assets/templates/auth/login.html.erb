<div class="loginbody">
  <div class="container">
    <div class="row shiftuprow">

      <form ng-submit="login()" role="form" ng-init="loginForm = {}">

        <a href="#" class="inputFacebook" ng-click="facebookLogin()">Login with Facebook </a>

        <div class="facebookEmailSeparater">
          <div class="separaterLine"></div><div class="separaterText">OR E-MAIL</div><div class="separaterLine"></div>
        </div>

        <div class="form-group">
          <input type="email" name="email" ng-model="loginForm.email" required="required" class="form-control inputEmail" placeholder="Email"/>
        </div>

        <div class="form-group">
          <input type="password" name="password" ng-model="loginForm.password" required="required" class="form-control inputPassword" placeholder="Password"/>
        </div>

        <div class="inputLoginOption">
          <div class="inputForget"><a href="#">Forgot Password</a></div>
        </div>

        <button type="submit" class="inputSubmit">Login</button>
      </form>
    </div>
  </div>
</div>
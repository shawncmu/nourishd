app.controller('RecipeCtrl', ['$scope','$auth','$location','$http','$routeParams', function($scope, $auth, $location,$http,$routeParams){

  $scope.recipe = {};

  var getRecipeProfile = function () {
    $http({
      method: "GET",
      url: "/api/recipes/"+$routeParams.id+".json"
    }).then(function (response){
      console.log(response.data);
      $scope.recipe = response.data;
      $scope.ingredients = $scope.recipe.ingredients;
      $scope.tools = $scope.recipe.equipment.split(",");
    },function (response){
      console.log(response);
    });
  };

getRecipeProfile();
}]);
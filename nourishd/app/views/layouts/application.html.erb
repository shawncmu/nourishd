<!DOCTYPE html>
<html ng-app='nourishd'>
<head>
  <title>Nourishd</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div ng-controller="NavCtrl">
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">nourishd</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="/"><span>COMMUNITY</span></a></li>
            <li><a href="/"><span>YOUTH</span></a></li>
            <li><a href="/"><span>ENVIRONMENT</span></a></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li><a href="/#/signup"><button class="btn btn-primary">Signup</button></a></li>
            <li><a href="/#/login"><button class="btn btn-primary">Login</button></a></li>
            <li><a><button class="btn btn-danger" ng-click="logout()">Logout</button></a></li>
          </ul>

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  </div>

  <div ng-view>
    <%= yield %>
  </div>
</body>
</html>
